<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        xmlns:custom="http://schemas.android.com/tools"
        android:padding="16dp"
        android:background="@color/transparent_dark_blue">

    <TextView
            android:id="@+id/tvTemperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0"
            android:textSize="30sp"
            android:textColor="@color/text_color_white"
            custom:text="50&#xb0;C"
            android:ellipsize="end"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            custom:fontName="@string/font_name_semibold"/>

    <TextView
            android:id="@+id/tvCityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTemperature"
            app:layout_constraintHorizontal_bias="1"
            android:paddingTop="8dp"
            android:textSize="18sp"
            android:textColor="@color/text_color_white"
            custom:text="Singapore"
            android:ellipsize="end"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            custom:fontName="@string/font_name_semibold"/>


    <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tvTemperature"
            app:layout_constraintTop_toTopOf="@+id/ivIcon"
            app:layout_constraintHorizontal_bias="0"
            android:paddingTop="10dp"
            android:textSize="16sp"
            android:textColor="@color/text_color_white"
            android:layout_marginLeft="10dp"
            custom:text="light intensity drizzle"
            android:maxLines="2"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            custom:fontName="@string/font_name_semibold"/>
</android.support.constraint.ConstraintLayout>